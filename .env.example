# Copia este archivo como .env y completa los valores necesarios

# Requeridos
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Para usar PostgreSQL (opcional). Formato: postgresql://user:pass@host:5432/dbname
#DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Archivos temporales
TEMP_DIR=./temp

# LLM
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
MAX_RETRIES=3
REQUEST_TIMEOUT=120

# PDFs
MAX_PDF_SIZE_MB=10

# Logging y modo
LOG_LEVEL=INFO
DEBUG_MODE=false
SAVE_INTERMEDIATE_RESULTS=false
CACHE_ENABLED=true